    <script>

        const user = "<%=user.Username %>";

        $(document).ready(function (){
            let socket = io.connect();

            let $messageForm = $('#send-message');
            let $messageBox = $('#message-input');
            let $chat = $('#messages-container');
            let $user = $('#username');


            $messageForm.submit(function (e) {
                e.preventDefault();

                let object = {
                    username: user,
                    message: $messageBox.val()
                };

                socket.emit('send message', object);
                $messageBox.val('');
            });

            socket.on('new message', function (data) {
                console.log("New message sent back to client.");

                $chat.append(data.userSent + ": " + data.msgToSend + "<br/>" + "<br/>");
            });


